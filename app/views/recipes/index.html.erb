<% @recipes.each_slice(4) do |recipes| %>
  <div class="row">
    <% recipes.each do |recipe| %>
      <div class="col-md-3">
        <div class="recipe">
          <div class="image_wrapper">
              <%= link_to(recipe) do %>
                <%= image_tag(recipe.pic.url(:medium)) %>
              <% end %>
          </div>
          <h2><%= link_to(recipe.title, recipe) %></h2>
        </div>
      </div>
    <% end %>
  </div>
<% end %>