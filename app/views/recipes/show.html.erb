<div class="main_content">
  <div id="recipe_top" class="row">
    <div class="col-md-4">
      <%= image_tag(@recipe.pic.url(:medium, :class => "recipe_pic")) %>
    </div>
    <div class="col-md-8">
      <div id="recipe_info">
        <h1><%= @recipe.title %></h1>
        <p><%= @recipe.description %></p>
        <p>Submitted by <%= @recipe.user.email %></p>
      </div>
    </div>
  </div>

  <div class="row">

    <div class="col-md-6">
      <div id="ingredients">
        <h2> Ingredients </h2>
        <ul>
          <% @recipe.ingredients.each do |ingr| %>
            <li><%= ingr.name %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md-6">
      <div id="directions">
        <h2> Directions </h2>
        <ul>
          <% @recipe.directions.each do |dir| %>
            <li><%= dir.step %></li>
          <% end %>
        </ul>
      </div>      
    </div>  

  </div>

  <div class="row">
    <div class="col-md-12">
      <%= link_to("Back", root_path, :class => "btn btn-default") %>
    <% if @recipe.user == current_user %>
      <%= link_to("Edit", edit_recipe_path, :class => "btn btn-default") %>
      <%= link_to("Delete", recipe_path(@recipe), :method => :delete, :data => { :confirm => "Are you sure you want to remove this wonderful Recipe?" }, :class => "btn btn-default") %>
    <% end %>
    </div>
  </div>
</div>